{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "bundler",
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}